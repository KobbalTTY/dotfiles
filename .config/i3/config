font pango:monospace 8

default_border none
default_floating_border none

set $mod Mod1

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"

bindsym $mod+n exec dmenu_run
bindsym $mod+r kill
bindsym $mod+t workspace back_and_forth
bindsym $mod+s restart

bindsym $mod+b workspace number $ws1
bindsym $mod+l workspace number $ws2
bindsym $mod+d workspace number $ws3
bindsym $mod+w workspace number $ws4

bindsym $mod+Shift+b move container to workspace number $ws1
bindsym $mod+Shift+l move container to workspace number $ws2
bindsym $mod+Shift+d move container to workspace number $ws3
bindsym $mod+Shift+w move container to workspace number $ws4

exec --nn-startup-id xsetroot -solid black
exec --no-startup-id xset s off -dpms s noblank
exec --no-startup-id picom
exec_always --no-startup-id pkill unclutter || true; unclutter -idle 1 -root
exec_always --no-startup-id pgrep wezterm || wezterm start
assign [instance="brave-browser"] $ws2

bindsym $mod+u scratchpad show
bindsym $mod+Shift+u move scratchpad

